<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meng.store.model.mapper.AccountMapper">

    <!-- 配置 查询结果的列明和实体类的属性名的对应关系; -->
    <resultMap id="accountMap" type="com.meng.store.model.dto.AccountDao">
        <!--主键字段的对应 -->
        <id property="id" javaType="Integer" column="id"/>
        <!--非主键字段的对应-->
        <result property="uid" javaType="Long" column="uid"/>
        <!--        <result property="account" javaType="String" column="account"/>-->
        <result property="nickname" javaType="String" column="nickname"/>
        <result property="email" javaType="String" column="email"/>
        <result property="phone" javaType="String" column="phone"/>
        <result property="wxId" javaType="String" column="wx_id"/>
        <result property="icon" javaType="String" column="icon"/>
        <!--        <result property="password" javaType="String" column="pwd"/>-->
        <result property="birth" javaType="String" column="birth"/>
        <result property="level" javaType="Integer" column="level"/>
        <result property="score" javaType="Integer" column="score"/>
        <result property="member" javaType="Integer" column="member"/>
        <result property="integral" javaType="Integer" column="integral"/>
        <result property="shareId" javaType="Integer" column="share_id"/>
        <result property="roleCode" javaType="Integer" column="role_code"/>
        <result property="shareCode" javaType="Integer" column="share_code"/>
        <result property="createDate" javaType="String" column="create_date"/>
    </resultMap>

    <select id="login" resultMap="accountMap">
        SELECT * FROM accounts where
        <if test="body.phone!=null and body.phone!=''">
            phone = #{body.phone};
        </if>
        <if test="body.email!=null and body.email!=''">
            email = #{body.email};
        </if>
        <if test="body.wxId!=null and body.wxId!=''">
            wx_id = #{body.wxId};
        </if>
    </select>

    <select id="query" resultType="int">
        SELECT id FROM accounts where
        <if test="body.phone!=null and body.phone!=''">
            phone = #{body.phone};
        </if>
        <if test="body.email!=null and body.email!=''">
            email = #{body.email};
        </if>
    </select>

    <!--    <insert id="register" parameterType="com.meng.store.model.entity.AccountEntity">-->
    <!--    <insert id="register" useGeneratedKeys="true" keyProperty="id" keyColumn="id">-->
    <insert id="register">
        insert into accounts
        (phone,email,wx_id,nickname,icon,pwd,birth,uid,level,score,member,integral,share_id,role_code,share_code,create_date)
        values (#{user.phone},#{user.email},#{user.wxId},#{user.nickname},#{user.icon},#{user.password},
        #{user.birth},#{user.uid},#{user.level},#{user.score},#{user.member},#{user.integral},
        #{user.shareId},#{user.roleCode},#{user.shareCode},#{user.createDate});

        <selectKey keyProperty="id" keyColumn="id" order="AFTER" resultType="int">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

    <select id="update" resultType="int">
        SELECT count(*) FROM accounts
    </select>

    <select id="reset" resultType="int">
        SELECT count(*) FROM accounts
    </select>
    <select id="logout" resultType="int">
        SELECT count(*) FROM accounts
    </select>

    <select id="accountAll" resultMap="accountMap">
        SELECT * FROM accounts;
    </select>
</mapper>